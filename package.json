{
  "name": "hex-widget",
  "version": "0.1.2",
  "description": "Configureable HTML5 Canvas Hex grid",
  "main": "index.js",
  "scripts": {
    "test": "npm run jshint && npm run build:specs && npm run karma:single",
    "karma:single": "karma start karma-conf.js --log-level debug --single-run",
    "watch:test": "parallelshell \"npm run watch:specs\" \"npm run watch:karma\"",
    "watch:karma": "karma start karma-conf.js",
    "build:specs": "mkdirp ./target/test && browserify ./specs/*.spec.js --debug -o ./target/test/built.specs.js",
    "watch:specs": "mkdirp ./target/test && watchify ./specs/*.spec.js --debug -o ./target/test/built.specs.js",
    "build:demo": "mkdirp ./target/demo && npm run copy:demoHTML && browserify ./demo/demoMain.js --debug --standalone ExampleContext > ./target/demo/bundle.js",
    "watch:demo": "mkdirp ./target/demo && npm run copy:demoHTML && watchify ./demo/demoMain.js --debug --standalone ExampleContext -v -o ./target/demo/bundle.js",
    "jshint": "jshint ./src",
    "copy:demoHTML": "copyfiles -f ./demo/demo.html ./target/demo"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/chad-autry/hex-widget.git"
  },
  "keywords": [
    "canvas",
    "hexagon",
    "grid",
    "paper.js"
  ],
  "author": {
    "name": "Chad Autry",
    "email": "chad.autry@gmail.com",
    "url": "http://chad-autry.github.io/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chad-autry/hex-widget/issues"
  },
  "homepage": "https://github.com/chad-autry/hex-widget",
  "dependencies": {
    "browserifyable-paper": "git+https://git@github.com/chad-autry/paper.js",
    "canvas-hexagon": "git+https://git@github.com/chad-autry/canvas-hexagon",
    "collections": "^1.2.1"
  },
  "devDependencies": {
    "browserify": "git+https://git@github.com/chad-autry/node-browserify",
    "copyfiles": "^0.2.1",
    "jshint": "^2.6.3",
    "karma": "^0.12.9",
    "karma-cli": "0.0.4",
    "karma-firefox-launcher": "^0.1.3",
    "karma-jasmine": "^0.1.5",
    "mkdirp": "^0.5.1",
    "npm-watch": "0.0.0",
    "parallelshell": "^1.1.1",
    "watchify": "^3.1.0"
  },
  "jshintConfig": {
    "node": "true",
    "predef": [
      "document"
    ]
  }
}
